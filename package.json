{
  "name": "linter-sass-lint",
  "main": "./lib/main",
  "version": "1.0.4",
  "description": "Atom Linter plugin to lint your Sass/SCSS with pure node sass-lint",
  "repository": "https://github.com/AtomLinter/linter-sass-lint",
  "license": "MIT",
  "keywords": [
    "Sass",
    "scss",
    "sass-lint",
    "node-sass",
    "linter"
  ],
  "scripts": {
    "lint": "coffeelint ./lib/main.coffee"
  },
  "engines": {
    "atom": ">=1.0.0"
  },
  "dependencies": {
    "atom-linter": "^4.1.1",
    "atom-package-deps": "^3.0.8",
    "consistent-path": "1.0.3",
    "globule": "^0.2.0",
    "sass-lint": "^1.4.0"
  },
  "package-deps": [
    "linter"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "1.1.0": "provideLinter"
      }
    }
  },
  "devDependencies": {
    "babel-eslint": "^4.1.6",
    "coffeelint": "^1.14.2",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^5.0.0"
  },
  "eslintConfig": {
    "extends": "airbnb/base",
    "parser": "babel-eslint",
    "globals": {
      "atom": true
    },
    "env": {
      "es6": true,
      "node": true
    }
  }
}
